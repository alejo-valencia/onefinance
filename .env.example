# Dashboard Configuration
# Copy this file to .env and fill in your values

# Port for the dashboard server (default: 3000)
PORT=3000

# Your Firebase Functions base URL
# Format: https://us-central1-YOUR_PROJECT_ID.cloudfunctions.net
FUNCTIONS_BASE_URL=https://us-central1-YOUR_PROJECT_ID.cloudfunctions.net

# Email address authorized to use the dashboard
# Only this email can sign in and access the dashboard
AUTHORIZED_EMAIL=your-email@gmail.com

# Firebase Configuration (from Firebase Console > Project Settings > Your apps)
# These are public configuration values (safe to expose in frontend)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
